<?xml version="1.0"?>
<config>
    <tabs>
        <yuzu translate="label" module="yuzu_tags">
            <label>Yuzu</label>
            <sort_order>600</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
        </yuzu>
    </tabs>
    <sections>
        <yuzu_tags translate="label" module="yuzu_tags">
            <label>Yuzu</label>
            <tab>yuzu</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <api_key translate="label">
                            <label>Yuzu Api Key</label>
                            <comment>
                                <![CDATA[<span class="notice">Don't have your API key yet? <br/><strong><a href="https://my.yuzu-network.com/register?from=magento" target="_blank">Create your Yuzu account in minutes!</a></strong></span>]]>
                            </comment>
                            <tooltip>Your Yuzu Api Key provided in my.yuzu.co</tooltip>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </api_key>
                    </fields>
                </general>
            </groups>
        </yuzu_tags>
    </sections>
</config>